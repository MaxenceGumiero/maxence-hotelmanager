{% extends 'base.html.twig' %}

{% block title %}
Gestionnaire d'hôtels Hb-HotelManager
{% endblock %}

{% block content %}

<a href="{{ env.base_path ~ '/clients' }}">
    <i class="fa fa-arrow-left" aria-hidden="true"></i> retour à la liste
</a>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">{{ client.firstname }} {{ client.lastname }}</div>
            <div class="card-body">
                <a href="{{ env.base_path ~ '/clients/' ~ client.id ~ '/edit' }}" class="btn btn-warning">Editer</a>
                <a href="{{ env.base_path ~ '/clients/' ~ client.id ~ '/delete' }}" class="btn btn-danger">Supprimer</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}